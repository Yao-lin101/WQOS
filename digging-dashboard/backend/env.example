# 应用配置
APP_NAME="WorldQuant Alpha Digging Dashboard"
APP_VERSION="1.0.0"
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8088

# 数据库配置
DATABASE_URL="sqlite:///./dashboard.db"

# JWT认证配置
SECRET_KEY="WQ-Alpha-Digging-Dashboard-2025-Secret-Key-Production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 挖掘脚本配置（可选，留空则自动检测项目根目录）
# PROJECT_ROOT="/path/to/your/WorldQuant/project"

# 日志配置
LOG_LEVEL="INFO"
LOG_FILE="dashboard.log"

# 安全配置
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=300  # 5分钟

# 进程监控配置
PROCESS_CHECK_INTERVAL=5  # 秒
LOG_TAIL_LINES=1000
